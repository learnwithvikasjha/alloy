// 01-global-remotecfg.alloy

livedebugging {
  enabled = true
}

remotecfg {
  url = "https://fleet-management-prod-008.grafana.net"
  id  = constants.hostname

  attributes = {
    "os"       = "linux",
    "env"      = "production",
    "hostname" = constants.hostname,
  }

  basic_auth {
    username = sys.env("REMOTE_CFG_USERNAME")
    password = sys.env("GCLOUD_RW_API_KEY")
  }
}
